  var counter = $('.dis').html();
  var currentDislikes = $('.dis').html();
  $(document).ready(function(){

    $('.dislikes').on('click', function(){

    counter++;

    $('.dis').empty();
    $('.dis').append(counter);
    $.post('/dislike', {dislikes: $('.dis').text()}, function(data){
    })
  })
})
</script>
